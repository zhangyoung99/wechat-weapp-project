/**index.wxss**/

.page-title {
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #e5e5e5;
  text-align: center;
  line-height: 80rpx;
}
.page-body-item {
  padding: 10px;
}
.page-body-item .item {
  display: flex;
}
.page-body-item .item-img{
  width: 160rpx;
  height: 160rpx; 
  border: 1px solid #666; 
}
.page-body-item .item-info {
  display: flex;
  align-content: center;
  flex-direction: column;
  margin-left: 10px;
}
.item-info .movie-sub {
  color: #e5e5e5;
  font-size: 14px;
}
.item-info .movie-director {
  color: #e5e5e5;
  font-size: 14px;
}
.page-body-item rating {
   /* align-items: flex-end;  */
    /* align-self: flex-end; */
    color: #f00;
    flex: 1; 
    text-align: right;
    padding-right: 15px;
}